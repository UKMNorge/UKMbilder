
<h2>Alle innslag</h2>
<ol class="list-group" id="bildeListe">
	{% for innslag in arrangement.getInnslag().getAll() %}
		<li class="list-group-item innslag" data-innslag-id="{{innslag.getId()}}">
			<div class="pull-right">
				<a href="#" class="visBilder btn btn-ukm btn-sm toggle" data-target="#bildeContainer_{{innslag.getId()}}" data-show="Vis bilder" data-hide="Lukk listen" data-innslag-id="{{ innslag.getId() }}">Vis bilder</a>
			</div>
			{% if innslag.getBilder().getAntall() > 0 %}
			<div class="as-mini-label-style image-info-icon as-margin-right-space-1 {{ innslag.getBilder().getAntall() > 0 ? 'has-images' : 'no-images' }}">
					<span class="icon">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 4 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image-icon lucide-image"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
				<span>{{ innslag.getBilder().getAntall() == 1 ? ' (1 bilde)' : ' (' ~ innslag.getBilder().getAntall() ~ ' bilder)' }}</span>
			</div>
			<br />
			{% endif %}

			<a href="?page={{GET('page')}}&action={{GET('action')}}&innslag={{innslag.getId()}}" class="visBildeLink">{{innslag.getNavn()}}</a>
			<br />
            <span class="text-muted">
                {{innslag.getType().getNavn()}}
            </span>
			<div class="clearfix"></div>
			<div class="bildeContainer" id="bildeContainer_{{innslag.getId()}}" data-innslag-id="{{ innslag.getId() }}" style="display:none;">
            Vennligst vent, laster inn bilder...
			</div>
		</li>
	{% else %}
		<li class="list-group-item">
			Du har ingen p√•meldte innslag.
		</li>
	{% endfor %}
</ol>
{% if not arrangement.erKunstgalleri() %}
<p class="mt-2">
	<a href="?page={{GET('page')}}">Tilbake til bilder</a>
</p>
{% endif %}


<script>
    var bildeToggle = UKMresources.toggle('#bildeListe');
</script>

<style>
.image-info-icon.has-images {
	background: var(--as-color-primary-success-lighter);
}
</style>